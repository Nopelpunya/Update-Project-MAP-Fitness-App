<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto"
    tools:context=".ChooseProgram">

    <TextView
        android:id="@+id/text_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO PPL PROGRAM BUDDY!"
        android:textStyle="bold"
        android:textSize="22dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04"
        />
    <TextView
        android:id="@+id/desc_judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your program below."
        android:textStyle="normal"
        android:textSize="12dp"
        android:fontFamily="serif"
        android:textColor="#C9D1C8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.05"
        />

    <ImageView
        android:id="@+id/push"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/pushday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.22"
        />
    <TextView
        android:id="@+id/judul_push"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="PUSH WORKOUT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/push"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        />
    <Button
        android:id="@+id/btn_push"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:backgroundTint="#5B7065"
        android:text="GO"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.42"
        app:layout_constraintHorizontal_bias="0.175"
        />

    <ImageView
        android:id="@+id/pull"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/pullday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.48"
        />
    <TextView
        android:id="@+id/judul_pull"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="PULL WORKOUT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/pull"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        />
    <Button
        android:id="@+id/btn_pull"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:backgroundTint="#5B7065"
        android:text="GO"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.655"
        app:layout_constraintHorizontal_bias="0.83"
        />

    <ImageView
        android:id="@+id/leg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/legday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.75"
        />
    <TextView
        android:id="@+id/judul_leg"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="LEG WORKOUT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/leg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        />
    <Button
        android:id="@+id/btn_leg"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:backgroundTint="#5B7065"
        android:text="GO"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.91"
        app:layout_constraintHorizontal_bias="0.18"
        />

</androidx.constraintlayout.widget.ConstraintLayout>